{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:all",
        ":dependencyDashboard",
        "schedule:daily"
    ],
    "baseBranches": [
        "develop"
    ],
    "packageRules": [
        {
            "description": "Automatically merge minor and patch-level updates",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "develop",
            "labels": [
                "UPDATE-minor-patch"
            ]
        },
        {
            "matchPackagePatterns": [
                "androidx.compose.compiler:compiler"
            ],
            "groupName": "kotlin"
        },
        {
            "matchPackagePatterns": [
                "org.jetbrains.kotlin.*"
            ],
            "groupName": "kotlin"
        },
        {
            "matchPackagePatterns": [
                "com.google.devtools.ksp"
            ],
            "groupName": "kotlin"
        }
    ]
}
