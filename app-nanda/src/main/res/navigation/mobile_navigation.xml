<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_category">

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.keelim.nandadiagnosis.ui.screen.category.CategoryFragment"
        android:label="@string/title_category">
        <action
            android:id="@+id/action_navigation_category_to_diagnosisFragment"
            app:destination="@id/diagnosisFragment" />
    </fragment>
    <dialog
        android:id="@+id/moreBottomSheetDialog"
        android:name="com.keelim.nandadiagnosis.ui.screen.main.MainBottomFragment"
        tools:layout="@layout/fragment_main_bottom" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.keelim.nandadiagnosis.ui.screen.setting.SettingsFragment"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_webFragment"
            app:destination="@id/webFragment" />
    </fragment>
    <fragment
        android:id="@+id/diagnosisFragment"
        android:name="com.keelim.nandadiagnosis.ui.screen.diagnosis.DiagnosisFragment"
        android:label="DiagnosisFragment">
        <argument
            android:name="navigation"
            app:argType="string"
            android:defaultValue='"0"' />
        <action
            android:id="@+id/action_diagnosisFragment_to_webFragment"
            app:destination="@id/webFragment" />
    </fragment>
    <fragment
        android:id="@+id/webFragment"
        android:name="com.keelim.nandadiagnosis.ui.screen.inappweb.WebFragment"
        android:label="WebFragment">
        <argument
            android:name="url"
            android:defaultValue="https://www.google.com"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.keelim.nandadiagnosis.ui.screen.category.CategoryFragment"
        android:label="CategoryFragment" />

</navigation>
