<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainFragment.category.CategoryFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/search_viewpager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_search_table"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TableLayout
            android:id="@+id/layout_search_table"
            android:layout_width="400dp"
            android:layout_height="475dp"
            android:background="@color/colorAccent"
            android:stretchColumns="*"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_viewpager">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <ImageView
                    android:id="@+id/search_view_1"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="건강증진"
                    android:onClick="toastMaker"
                    android:src="@drawable/healthpromotion" />

                <ImageView
                    android:id="@+id/search_view_2"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:baselineAligned="false"
                    android:clickable="true"
                    android:contentDescription="영양"
                    android:onClick="toastMaker"
                    android:src="@drawable/nutrition" />

                <ImageView
                    android:id="@+id/search_view_3"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="배설/교환"
                    android:onClick="toastMaker"
                    android:src="@drawable/elimination" />

                <ImageView
                    android:id="@+id/search_view_4"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="활동/휴식"
                    android:onClick="toastMaker"
                    android:src="@drawable/activityrest" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/search_view_5"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="지각/인식"
                    android:onClick="toastMaker"
                    android:src="@drawable/perceptioncongnition" />

                <ImageView
                    android:id="@+id/search_view_6"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="자아지각"
                    android:onClick="toastMaker"
                    android:src="@drawable/selfperception" />

                <ImageView
                    android:id="@+id/search_view_7"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="역할관계"
                    android:onClick="toastMaker"
                    android:src="@drawable/rolerelationship" />

                <ImageView
                    android:id="@+id/search_view_8"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="성"
                    android:onClick="toastMaker"
                    android:src="@drawable/sexuality" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/search_view_9"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="대처/스트레스 내성"
                    android:onClick="toastMaker"
                    android:src="@drawable/tolerlance" />

                <ImageView
                    android:id="@+id/search_view_10"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="삶의 원칙"
                    android:onClick="toastMaker"
                    android:src="@drawable/lifeprinciple" />

                <ImageView
                    android:id="@+id/search_view_11"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="안전/보호"
                    android:onClick="toastMaker"
                    android:src="@drawable/safetyprotection" />

                <ImageView
                    android:id="@+id/search_view_12"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="안위"
                    android:onClick="toastMaker"
                    android:src="@drawable/comfort" />

            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/search_view_13"
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:contentDescription="성장/발달"
                    android:onClick="toastMaker"
                    android:src="@drawable/growthdevelopment" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="100dp" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="100dp" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="100dp" />
            </TableRow>
        </TableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
