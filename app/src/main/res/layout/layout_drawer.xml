<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306.33dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68.33dp">

        <Button
            android:id="@+id/close_drawer_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16.00dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104.33dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drawer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="18.33sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="18.33sp" />

            <Button
                android:id="@+id/button_drawer_mypage"
                android:layout_width="25.00dp"
                android:layout_height="25.00dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

    <Button
        android:id="@+id/button_drawer_mystamp"
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:layout_marginStart="20.33dp"
        android:background="#00ffffff"

        android:gravity="start|center_vertical"
        android:text="마이 스탬프 보기"
        android:textSize="15.33sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

    <Button
        android:id="@+id/button_drawer_buy"
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:layout_marginStart="20.33dp"
        android:background="#00ffffff"
        android:gravity="start|center_vertical"
        android:text="쿠폰 사러 가기"
        android:textSize="15.33sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

</LinearLayout>