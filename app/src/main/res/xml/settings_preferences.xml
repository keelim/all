<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="total">
    <PreferenceCategory
        app:key="feature_category"
        app:title="관련 링크">
        <Preference
            app:key="blog"
            app:title="관련블로그" />

        <Preference
            app:key="home"
            app:title="홈페이지" />
    </PreferenceCategory>

    <PreferenceCategory app:title="기능">
        <Preference
            app:key="update"
            app:title="업데이트" />

        <Preference
            app:key="search"
            app:title="검색" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="dark"
            android:title="다크모드 활성화" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="other_category"
        app:title="약관">
        <Preference
            app:key="opensource"
            app:title="오픈소스 라이선스" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>