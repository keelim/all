<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="관련 링크">
        <Preference
            app:key="content"
            app:title="공지사항" />

        <Preference
            app:key="homepage"
            app:title="홈페이지" />

    </PreferenceCategory>

    <PreferenceCategory app:title="기능">
        <Preference
            app:key="update"
            app:title="업데이트" />

        <ListPreference
            app:defaultValue="default"
            app:dialogTitle="Light Mode/Dark Mode"
            app:entries="@array/themeListArray"
            app:entryValues="@array/themeEntryArray"
            app:key="dark"
            app:title="테마 선택하기"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


    <PreferenceCategory
        app:key="other_category"
        app:title="약관">
        <Preference
            app:key="opensource"
            app:title="오픈소스 라이선스" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>