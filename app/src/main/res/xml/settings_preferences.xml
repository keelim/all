<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="total">
    <PreferenceCategory app:key="feature_category">
        <Preference
            app:key="blog"
            app:title="관련 블로그" />

        <Preference
            app:key="home"
            app:title="homepage" />
    </PreferenceCategory>

    <PreferenceCategory app:key="other_category">
        <Preference
            app:key="opensource"
            app:title="오픈소스 라이선스" />
    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            app:key="database"
            app:title="데이터베이스 다운로드" />

        <Preference
            app:key="update"
            app:title="인앱 업데이트" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="dark"
            android:title="다크모드 활성화" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>